<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".GetPaid"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">



    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/calibri"
        android:text="Personalised Pay Code"
        android:textColor="@color/colorAccent"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cameraPreview"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/edt_value"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:background="@drawable/whiteroundedbuttonshape"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:hint=" Account ID / Wallet Number" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blueroundedbuttonshape"
            android:text="Generate"
            android:fontFamily="@font/gotham"
            android:textColor="@color/colorBlack" />

        <Button
            android:id="@+id/space"
            android:layout_width="10dp"
            android:background="@color/backgroundcolor"
            android:layout_height="wrap_content"

            />
        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blueroundedbuttonshape"
            android:text="Save"
            android:fontFamily="@font/gotham"
            android:paddingLeft="5dp"
            android:textColor="@color/colorBlack" />
    </LinearLayout>

    <ImageView
        android:id="@+id/QR_Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name" />

</LinearLayout>
